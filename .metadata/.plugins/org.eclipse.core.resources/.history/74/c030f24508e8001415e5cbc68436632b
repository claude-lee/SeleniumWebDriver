package selen;

import java.io.File;
import java.util.List;
import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebDriver.Timeouts;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.openqa.selenium.ie.InternetExplorerDriver;
import org.openqa.selenium.chrome.ChromeDriver;

import com.thoughtworks.selenium.webdriven.Timer;

public class MyWebDriver {
	
	WebDriver driver;
	
	public enum Browser {
		FIREFOX, IE, CHROME
	}
	
	public enum Html{
		GOOGLE, TEST
	}
	public MyWebDriver(){
		
	}
	
	public void setup(Browser browser){
		File file;
		switch(browser) {
		case FIREFOX:
			driver = new FirefoxDriver();
			break;
		case IE:
			file = new File("C:/Users/clei/workspace/browserDriver/IEDriverServer.exe");
			System.setProperty("webdriver.ie.driver", file.getAbsolutePath());
			driver = new InternetExplorerDriver();
			break;
		case CHROME:
			file = new File("C:/Users/clei/workspace/browserDriver/chromedriver.exe");
			System.setProperty("webdriver.chrome.driver", file.getAbsolutePath());
			driver = new ChromeDriver();
			break;
		default:
			System.out.print("Browser is not supported");
			break;
		}
		
			
	}

	public WebDriver getDriver() {
		return driver;
	}

	public void setDriver(WebDriver driver) {
		this.driver = driver;
	}


	public void openHtml(){
		driver.get("file:///C:/Users/clei/workspace/SeleniumWebDriver/TestPage.html");
	}
	
	public void openGoogle(){
		 driver.get("https://www.google.com");
	}


	public static void main(String[] args){
		MyWebDriver myDriver = new MyWebDriver();
		
		//openFireFox();
	      //openInternetExplorer();
	      //openChrome();
		//radioButtonMethod();
		//checkBoxMethod();
		
		myDriver.selectDropDownMethod();
		//selectDropDownMethod();
	}
	
	public void selectDropDownMethod(){
		this.setup(Browser.CHROME);
        this.openTestHtml();
        
		WebElement selectBox = driver.findElement(By.id("select1"));
		
	}
	
	public void checkBoxMethod(){
		this.openTestHtml();
		WebElement checkBox = driver.findElement(By.id("check1"));
		checkBox.click();
		checkBox.click();	
	}
	
	public void radioButtonMethod(){
		
		List<WebElement> radioButtons = driver.findElements(By.name("color"));
		for(int i=0; i<radioButtons.size(); i++){
			if(radioButtons.get(i).isSelected()){
				System.out.println(radioButtons.get(i).getAttribute("value"));
			}
		}
	}
	
	public static void openChrome(){
		
	       driver.get("https://www.google.com");

	       //Maximize the Browser window
	       driver.manage().window().maximize();

	       WebElement searchBox = driver.findElement(By.id("lst-ib"));
	        searchBox.sendKeys("pluralsight");
	        
	        driver.manage().timeouts().implicitlyWait(10, TimeUnit.SECONDS);
	       
	       WebElement imageLink = driver.findElement(By.className("qqs"));
	       imageLink.click();
	       //Get the current page URL and store the value in variable 'str'
	       String str = driver.getCurrentUrl();

	       //Print the value of variable in the console
	       System.out.println("The current URL is " + str);
	}
	
	public static void openInternetExplorer(){
		File file = new File("C:/Users/clei/workspace/browserDriver/IEDriverServer.exe");
		System.setProperty("webdriver.ie.driver", file.getAbsolutePath());
		WebDriver driver = new InternetExplorerDriver();

	       //Open the URL in firefox browser
	       driver.get("https://www.google.com");

	       //Maximize the Browser window
	       driver.manage().window().maximize();

	       //Get the current page URL and store the value in variable 'str'
	       String str = driver.getCurrentUrl();

	       //Print the value of variable in the console
	       System.out.println("The current URL is " + str);
	}
	
	public void openFireFox(){

	       


	       driver.get("https://www.google.com");

	       //Maximize the Browser window
	       driver.manage().window().maximize();

	       //Get the current page URL and store the value in variable 'str'
	       String str = driver.getCurrentUrl();

	       //Print the value of variable in the console
	       System.out.println("The current URL is " + str);
	}
	

}
